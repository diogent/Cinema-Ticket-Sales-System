
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />


    <title>Home page</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand">@Html.ActionLink("Cinema Ticket Sales", "Index", "Home")</a>
        <div class="navbar navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    @Html.ActionLink("Login", "Login", "Account")
                </li> &nbsp;&nbsp;&nbsp;
                <li class="nav-item">
                    @Html.ActionLink("Sign Up", "Register", "Account")
                </li>
            </ul>
        </div>
    </nav>


    @foreach (var m in ViewBag.Movies)
    {
        <div class="row">
            <div class="card" style="width: 20rem; margin: 2%;">
                <img class="card-img-top" src="~/Images/Smallfoot.jpg" style="overflow: hidden">
                <div class="card-body">
                    <h4 class="card-title">@m.Name</h4>
                    <p class="card-text">@m.Description</p>
                    <a class="btn btn-primary">Learn More</a>
               </div>
             </div>
        </div>
       
    }

</body>
</html>
