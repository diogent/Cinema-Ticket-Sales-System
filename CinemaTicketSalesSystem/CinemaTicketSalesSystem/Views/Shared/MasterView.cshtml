
@{
    ViewBag.Title = "Home page";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Scripts.Render("~/bundles/jquery")    
    @Styles.Render("~/bundles/chosenStyles")
    @Styles.Render("~/bundles/mainStyles")    
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand">@Html.ActionLink("Cinema Ticket Sales", "Index", "Home")</a>
        <div class="navbar navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    @Html.ActionLink("Create New", "CreateNewMovie", "EditMovie")
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Login", "Login", "Account")
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Sign Up", "Register", "Account")
                </li>
            </ul>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/chosen")
</body>
</html>
